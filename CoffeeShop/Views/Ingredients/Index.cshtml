@{
  Layout = "_Layout";
}
<h1>Our recipe list</h1>
<hr />

@if (Model.Count != 0)
{
  <ol>
    @foreach (var drinks in Model["drinks"])
    {
      <li>@drinks.GetName() Units| <a href="/inventory" class="deleteAction" id="@drinks.GetId()">Delete</a></li>
    }
    @foreach (var inventories in Model["inventories"])
    {
      <li>@inventories.GetItem()</li>
    }
    @foreach (var amount in Model["ingredients"])
    {
      <li>@amount.GetAmount()</li>
    }
 </ol>
}
